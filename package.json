{
  "name": "arastester",
  "version": "1.0.0",
  "description": "This is a application for automatic testing of ARAS",
  "license": "ISC",
  "author": "Gopale Ashwin",
  "type": "commonjs",
  "main": "main.js",
  "scripts": {
    "build:backend": "cd backend/ArasBackend && dotnet build -c Debug",
    "build:backend:prod": "cd backend/ArasBackend && dotnet publish -c Release -o ../../dist-backend",
    "build:preload": "tsc -p tsconfig.preload.json",
    "clean": "node -e \"const fs = require('fs'); ['dist', 'dist-backend', 'release', 'backend/ArasBackend/bin', 'backend/ArasBackend/obj'].forEach(dir => fs.rmSync(dir, { recursive: true, force: true })); console.log('Cleanup complete');\"",
    "predev": "npm run build:backend && npm run build:preload",
    "dev": "node dev-runner.js",
    "dev:server": "vite",
    "dev:electron": "electron . --dev",
    "build": "vite build",
    "dist": "npm run build && npm run build:backend:prod && npm run build:preload && electron-builder",
    "typecheck": "tsc --noEmit",
    "ci:types": "npm run typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "ci:lint": "npm run lint",
    "ci:tsconfig": "node scripts/assert-tsconfig.js",
    "ci:all": "npm run ci:tsconfig && npm run ci:types && npm run ci:lint"
  },
  "build": {
    "appId": "com.gopale.arastester",
    "productName": "ARAS Tester",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "dist-backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "electron": "^39.2.1",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.1.3",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.10"
  }
}
