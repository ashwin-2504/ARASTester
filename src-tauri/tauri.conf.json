{
  "build": {
    "beforeDevCommand": "npm run dev:server",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "ARAS Tester",
    "version": "1.0.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "ARAS Tester",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": false,
      "dialog": {
        "open": true
      },
      "fs": {
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "removeFile": true
      },
      "path": {
        "all": true
      },
      "process": {
        "command": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "identifier": "com.gopale.arastester",
      "resources": ["../dist-backend"]
    }
  }
}
